pipeline {
    agent any
    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mkranthi/kubernetes-automation.git'
            }
        }
        stage('Build Image') {
            steps {
                script {
                    sh 'docker build -t appimage1 .'
                    sh 'docker images'
                }
            }
        }
        stage('login into jfrog artifactory'){
            steps{
                sh "docker login https://devcompute.jfrog.io -u admin -p Devops@1"
            }
        }
        stage('docker tag'){
            steps{
                sh "docker tag appimage1 devcompute.jfrog.io/artifactory/devops-docker/appimage1"    
            }
        }
        stage('push into jfrog artifactory'){
            steps{
                sh "docker push devcompute.jfrog.io/artifactory/devops-docker/appimage1"
            }
        }
    }
}